<?xml version="1.0" encoding="UTF-8"?>
<project name="OrionDesignPatternsBuilder" default="all" basedir=".">
    <property file="DesignPatternsBuild.prop"/>
    <property name="orion.design.patterns.binaries.dir" value="${orion.design.patterns.design.patterns.dir}/${default.binaries.dir.name}"/>
    <property name="orion.design.patterns.binaries.dir" value="${orion.design.patterns.design.patterns.dir}/${default.binaries.dir.name}"/>
    <property name="orion.design.patterns.source.dir" value="${orion.design.patterns.design.patterns.dir}/${default.source.dir.name}"/>

    
    <target name="all">
    	   <buildAndPackageProject sourceDir="${orion.design.patterns.source.dir}" binariesDir="${orion.design.patterns.binaries.dir}" JARPath="${orion.orionware.libraries.libraries.dir}/${orion.design.patterns.jar.file.name}" projectName="${orion.design.patterns}"/>
        
        <copy todir="${orion.design.patterns.binaries.dir}" verbose="yes" failonerror="false" overwrite="true">
            <fileset dir="${orion.design.patterns.binaries.dir}" includes="${default.any.file.extension.pattern}"/>
        </copy>
    </target>
	
	
	<target name="delete_JAR">
		<deleteFile path="${orion.orionware.libraries.libraries.dir}/${orion.design.patterns.jar.file.name}"/>
    </target>
</project>