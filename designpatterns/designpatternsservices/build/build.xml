<?xml version="1.0"?>
<project name="OrionDesignPatternsServicesBuilder" default="all" basedir=".">
    <property file="DesignPatternsServicesBuild.prop"/>
    <property name="orion.design.patterns.binaries.dir" value="${orion.design.patterns.dir}/${default.binaries.dir.name}"/>
	<property name="orion.design.patterns.services.binaries.dir" value="${orion.design.patterns.services.dir}/${default.binaries.dir.name}"/>
	<property name="orion.design.patterns.services.source.dir" value="${orion.design.patterns.services.dir}/${default.source.dir.name}"/>

    
    <target name="all">
    	<buildProjectAndPackage sourceDir="${orion.design.patterns.services.source.dir}" binariesDir="${orion.design.patterns.services.binaries.dir}" JARPath="${orion.design.patterns.services.jar.file.name}" projectName="${orion.design.patterns.services}"/>
    	                
        <copy todir="${orion.design.patterns.binaries.dir}" verbose="yes" failonerror="false" overwrite="true">
            <fileset dir="${orion.design.patterns.services.binaries.dir}" includes="**/**"/>
        </copy>
    </target>
</project>