<?xml version="1.0" encoding="UTF-8"?>
<project name="OrionConfigurationBuilder" default="all" basedir=".">
    <property name="orion.configuration.source.dir" value="${orion.configuration.dir}/${default.source.dir.name}"/>

    
    <target name="all">
        <buildAndPackageProject sourceDir="${orion.configuration.source.dir}" binariesDir="${orion.configuration.binaries.dir}" JARPath="${orion.orionware.libraries.libraries.dir}/${orion.configuration.jar.file.name}" projectName="${orion.configuration}"/>
    </target>
	
	
	<target name="delete_JAR">
		<deleteFile path="${orion.orionware.libraries.libraries.dir}/${orion.configuration.jar.file.name}"/>
    </target>
</project>