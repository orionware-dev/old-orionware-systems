<?xml version="1.0" encoding="UTF-8"?>
<project name="OrionCoreConfigurationFacadesBuilder" default="all" basedir=".">
    <property file="CoreConfigurationFacadesBuild.prop"/>
    <property name="orion.core.binaries.dir" value="${orion.core.dir}/${default.binaries.dir.name}"/>
    <property name="orion.core.configuration.facades.binaries.dir" value="${orion.core.configuration.facades.dir}/${default.binaries.dir.name}"/>
    <property name="orion.core.configuration.facades.source.dir" value="${orion.core.configuration.facades.dir}/${default.source.dir.name}"/>

    
    <target name="all">
    	   <buildAndPackageProject sourceDir="${orion.core.configuration.facades.source.dir}" binariesDir="${orion.core.configuration.facades.binaries.dir}" JARPath="${orion.orionware.libraries.libraries.dir}/${orion.core.configuration.facades.jar.file.name}" projectName="${orion.core.configuration.facades}"/>
        
        <copy todir="${orion.core.binaries.dir}" verbose="yes" failonerror="false" overwrite="true">
            <fileset dir="${orion.core.configuration.facades.binaries.dir}" includes="${default.any.file.extension.pattern}"/>
        </copy>
    </target>
	
	
	<target name="delete_JAR">
		<deleteFile path="${orion.orionware.libraries.libraries.dir}/${orion.core.configuration.facades.jar.file.name}"/>
    </target>
</project>