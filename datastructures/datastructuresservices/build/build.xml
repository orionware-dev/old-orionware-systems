<?xml version="1.0"?>
<project name="OrionDataStructuresBuilder" default="all" basedir=".">
    <property file="DataStructuresServicesBuild.prop"/>
    <property name="orion.data.structures.binaries.dir" value="${orion.data.structures.dir}/${default.binaries.dir.name}"/>
	<property name="orion.data.structures.services.binaries.dir" value="${orion.data.structures.services.dir}/${default.binaries.dir.name}"/>
	<property name="orion.data.structures.services.source.dir" value="${orion.data.structures.services.dir}/${default.source.dir.name}"/>

    
    <target name="all">
    	<buildAndPackageProject sourceDir="${orion.data.structures.services.source.dir}" binariesDir="${orion.data.structures.services.binaries.dir}" JARPath="${orion.data.structures.services.jar.file.name}" projectName="${orion.data.structures.services}"/>
    	                
        <copy todir="${orion.data.structures.binaries.dir}" verbose="yes" failonerror="false" overwrite="true">
            <fileset dir="${orion.data.structures.services.binaries.dir}" includes="**/**"/>
        </copy>
    </target>
</project>