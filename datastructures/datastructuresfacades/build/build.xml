<?xml version="1.0"?>
<project name="OrionDataStructuresFacadesBuilder" default="all" basedir=".">
    <property file="DataStructuresFacadesBuild.prop"/>
    <property name="orion.data.structures.binaries.dir" value="${orion.data.structures.dir}/${default.binaries.dir.name}"/>
	<property name="orion.data.structures.facades.binaries.dir" value="${orion.data.structures.facades.dir}/${default.binaries.dir.name}"/>
	<property name="orion.data.structures.facades.source.dir" value="${orion.data.structures.facades.dir}/${default.source.dir.name}"/>

    
    <target name="all">
    	<buildAndPackageProject sourceDir="${orion.data.structures.facades.source.dir}" binariesDir="${orion.data.structures.facades.binaries.dir}" JARPath="${orion.data.structures.facades.jar.file.name}" projectName="${orion.data.structures.facades}"/>
    	                
        <copy todir="${orion.data.structures.binaries.dir}" verbose="yes" failonerror="false" overwrite="true">
            <fileset dir="${orion.data.structures.facades.binaries.dir}" includes="${default.any.file.extension.pattern}"/>
        </copy>
    </target>
</project>