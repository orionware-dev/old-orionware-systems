<?xml version="1.0"?>
<project name="AntService" basedir=".">
	<dirname property="this.basedir" file="${ant.file.AntService}"/>
	
	
	<macrodef name="importAllMacrodefs">
		<attribute name="dir" default=""/>
		
		<sequential>
            <import>
                <fileset dir="@{dir}" includes="**/*.xml"/>
            </import>
        </sequential>
    </macrodef>
	
	
	<macrodef name="initialiseAntService">
        <sequential>
        	<taskdef resource="${orion.ant.extensions.definitions.file.path}" classpath="${orion.ant.extensions.file.path}"/>
        	<importAllMacrodefs dir="${orion.ant.services.dir}"/>
        	<property file="${this.basedir}/Ant.prop"/>
        </sequential>
    </macrodef>
    
    
    <initialiseAntService/>
</project>