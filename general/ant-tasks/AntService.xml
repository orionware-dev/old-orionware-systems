<?xml version="1.0"?>
<project name="AntService" basedir=".">
	<macrodef name="importMacrodefs">
		<attribute name="dir" default=""/>
		
		<sequential>
            <import>
                <fileset dir="@{dir}" includes="**/*.xml"/>
            </import>
        </sequential>
    </macrodef>
	
	
	<macrodef name="initialiseAntService">
        <sequential>
        	<importMacrodefs dir="${orion.ant.services.dir}"/>
            <taskdef resource="net/sf/antcontrib/antlib.xml" classpath="${orion.libraries.ant.dir}/ant-contrib-1.0b3.jar"/>
        </sequential>
    </macrodef>
    
    
    <initialiseAntService/>
</project>