<project name="FileService" basedir=".">
    <macrodef name="deleteFile">
        <attribute name="path" default=""/>
        
        <sequential>
        	<delete file="@{path}"/>
        </sequential>
    </macrodef>
	
	
	<macrodef name="deleteFiles">
        <attribute name="dir" default=""/>
		<attribute name="include" default=""/>
        
        <sequential>
            <delete>
            	<fileset dir="@{dir}" includes="@{include}"/>
            </delete>
        </sequential>
    </macrodef>
</project>